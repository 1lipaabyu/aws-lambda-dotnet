<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>Amazon.Lambda.Tools adds commands to the dotnet cli to deploy AWS Lambda functions.</Description>
    <AssemblyTitle>Amazon.Lambda.Tools</AssemblyTitle>
    <VersionPrefix>1.3.0-preview1</VersionPrefix>
    <Authors>Amazon Web Services</Authors>
    <TargetFramework>netcoreapp1.0</TargetFramework>
    <NetStandardImplicitPackageVersion>1.6.0</NetStandardImplicitPackageVersion>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <AssemblyName>dotnet-lambda</AssemblyName>
    <OutputType>Exe</OutputType>
    <PackageId>Amazon.Lambda.Tools</PackageId>
    <PackageTags>AWS;Amazon;Lambda</PackageTags>
    <PackageIconUrl>http://media.amazonwebservices.com/aws_singlebox_01.png</PackageIconUrl>
    <PackageProjectUrl>https://aws.amazon.com/lambda/</PackageProjectUrl>
    <PackageLicenseUrl>http://aws.amazon.com/apache2.0/</PackageLicenseUrl>
    <RuntimeFrameworkVersion>1.0.4</RuntimeFrameworkVersion>
    <PackageTargetFallback>$(PackageTargetFallback);dnxcore50</PackageTargetFallback>
    <GenerateAssemblyConfigurationAttribute>false</GenerateAssemblyConfigurationAttribute>
    <GenerateAssemblyCompanyAttribute>false</GenerateAssemblyCompanyAttribute>
    <GenerateAssemblyProductAttribute>false</GenerateAssemblyProductAttribute>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\netcore.runtime.hierarchy.json" Exclude="bin\**;obj\**;**\*.xproj;packages\**;@(EmbeddedResource)" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.IO.Compression.ZipFile" Version="4.0.1" />
    <PackageReference Include="System.Runtime.Loader" Version="4.0.0" />
    <PackageReference Include="AWSSDK.CloudFormation" Version="[3.3.3, 3.4)" />
    <PackageReference Include="AWSSDK.Lambda" Version="[3.3.2, 3.4)" />
    <PackageReference Include="AWSSDK.IdentityManagement" Version="[3.3.0.3, 3.4)" />
    <PackageReference Include="AWSSDK.S3" Version="[3.3.4, 3.4)" />
  </ItemGroup>

  <PropertyGroup Condition=" '$(TargetFramework)' == 'netcoreapp1.0' ">
    <DefineConstants>$(DefineConstants);NETCORE</DefineConstants>
  </PropertyGroup>

</Project>
